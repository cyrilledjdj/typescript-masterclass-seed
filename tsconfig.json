{
  "files": ["src/app.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./@types",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "outDir": "dist",
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
